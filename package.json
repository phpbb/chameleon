{
	"name": "chameleon",
	"version": "0.2.0",
	"description": "The default theme for phpbb",
	"main": "gulpfile.js",
	"xo": {
		"ignores": [
			"all/js/_*.js"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"comma-dangle": [
				"error",
				"always-multiline"
			],
			"max-params": [
				"error",
				6
			],
			"block-spacing": "error",
			"array-bracket-spacing": [
				"error",
				"always"
			],
			"multiline-comment-style": "off",
			"computed-property-spacing": "off",
			"space-in-parens": "off",
			"capitalized-comments": "off",
			"object-curly-spacing": [
				"error",
				"always"
			],
			"no-lonely-if": "off"
		},
		"env": [
			"es6",
			"browser",
			"node",
			"jquery"
		]
	},
	"browserslist": [
		"> 1%",
		"not ie 11",
		"not samsung 10.1",
		"not and_uc 12.12",
		"edge >= 18",
		"ff >= 72",
		"chrome >= 79",
		"safari >= 13",
		"ios >= 12.4"
	],
	"scripts": {
		"test": "xo && gulp test && stylelint --config ./.stylelintrc './**/*.scss'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/phpbb/chameleon.git"
	},
	"author": "Michael Miday (Hanakin)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/phpbb/chameleon/issues"
	},
	"homepage": "https://github.com/phpbb/chameleon#readme",
	"devDependencies": {
		"acorn": "7.1.1",
		"autoprefixer": "9.7.5",
		"compression": "1.7.4",
		"cssnano": "4.1.10",
		"del": "5.1.0",
		"express": "4.17.1",
		"gulp": "4.0.2",
		"gulp-beautify": "3.0.0",
		"gulp-data": "1.3.1",
		"gulp-merge-json": "2.1.0",
		"gulp-nunjucks-render": "2.2.3",
		"gulp-postcss": "8.0.0",
		"gulp-remove-empty-lines": "0.1.0",
		"gulp-rename": "2.0.0",
		"gulp-sass": "4.0.2",
		"gulp-sourcemaps": "2.6.5",
		"moment": "2.24.0",
		"postcss-discard-comments": "4.0.2",
		"postcss-pxtorem": "5.1.1",
		"postcss-rtl": "1.7.3",
		"postcss-sorting": "5.0.1",
		"server": "1.0.27",
		"stylelint": "13.2.1",
		"stylelint-order": "4.0.0",
		"stylelint-scss": "3.16.0",
		"webpack": "4.42.1",
		"xo": "0.28.0"
	}
}
