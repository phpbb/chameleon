{
	"name": "chameleon",
	"version": "0.2.0",
	"description": "The default theme for phpbb",
	"main": "gulpfile.js",
	"xo": {
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"comma-dangle": [
				"error",
				"always"
			],
			"block-spacing": "error",
			"array-bracket-spacing": [
				"error",
				"always"
			],
			"multiline-comment-style": [
				"error",
				"starred-block"
			],
			"computed-property-spacing": "off",
			"space-in-parens": "off",
			"capitalized-comments": "off",
			"object-curly-spacing": [
				"error",
				"always"
			],
			"no-lonely-if": "off"
		},
		"env": [
			"es6",
			"browser",
			"node",
			"jquery"
		]
	},
	"scripts": {
		"test": "xo && gulp test && stylelint --config ./.stylelintrc './**/*.scss'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/phpbb/chameleon.git"
	},
	"author": "Michael Miday (Hanakin)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/phpbb/chameleon/issues"
	},
	"homepage": "https://github.com/phpbb/chameleon#readme",
	"devDependencies": {
		"acorn": "6.1.0",
		"braces": "^3.0.2",
		"del": "^4.1.1",
		"gulp": "4.0.1",
		"gulp-autoprefixer": "^6.1.0",
		"compression": "1.7.3",
		"express": "4.16.4",
		"gulp-cssnano": "^2.1.3",
		"gulp-data": "^1.3.1",
		"gulp-html-beautify": "1.0.1",
		"gulp-merge-json": "1.3.1",
		"gulp-nunjucks-render": "^2.2.3",
		"gulp-postcss": "^8.0.0",
		"gulp-rename": "1.4.0",
		"gulp-sass": "^4.0.2",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-stylefmt": "^1.1.0",
		"js-yaml": "^3.13.1",
		"moment": "2.24.0",
		"gulp-remove-empty-lines": "0.1.0",
		"postcss-discard-comments": "^2.0.4",
		"postcss-pxtorem": "^4.0.1",
		"postcss-rtl": "^1.3.3",
		"postcss-sorting": "^5.0.0",
		"stylelint": "10.0.1",
		"stylelint-order": "3.0.0",
		"stylelint-scss": "3.6.0",
		"tar": "^4.4.8",
		"xo": "0.24.0",
		"server": "1.0.18"
	}
}
