<div class="o-bar c-toolbar t-toolbar">
	<ul class="o-bar-left c-toolbar-left t-toolbar-left">
		<li class="o-bar-item c-toolbar-item t-toolbar-item">
			<a class="o-bar-action c-toolbar-action t-toolbar-action" href="#" title="{{ lang.new_topic }}">
				<span class="c-toolbar-action-text t-toolbar-action-text">{{ lang.new_topic }}</span>
				{{ 'mdi:plus'|icon('iconify', 'o-icon c-toolbar-action-icon t-toolbar-action-icon')|safe }}
			</a>
		</li>
	</ul>
	<ul class="o-bar-right c-toolbar-right t-toolbar-right">
		<li class="o-bar-item c-toolbar-item t-toolbar-item">
			<a class="o-bar-action c-toolbar-action t-toolbar-action" href="#" data-tooltip="true" title="Jump To">
				{{ 'ic:outline-directions'|icon('iconify', 'o-icon c-toolbar-action-icon t-toolbar-action-icon')|safe }}
			</a>
			<a class="o-bar-action c-toolbar-action t-toolbar-action" href="#" data-tooltip="true" title="Filter">
				{{ 'mdi:filter-variant'|icon('iconify', 'o-icon c-toolbar-action-icon t-toolbar-action-icon')|safe }}
			</a>
			<a class="o-bar-action c-toolbar-action t-toolbar-action" href="#" data-tooltip="true" title="Sort">
				{{ 'mdi:sort'|icon('iconify', 'o-icon c-toolbar-action-icon t-toolbar-action-icon')|safe }}
			</a>
			<a class="o-bar-action c-toolbar-action t-toolbar-action" href="#" data-tooltip="true" title="Order">
				{{ 'mdi:sort-ascending'|icon('iconify', 'o-icon c-toolbar-action-icon t-toolbar-action-icon')|safe }}
			</a>
		</li>
	</ul>
</div>
