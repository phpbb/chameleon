{% for item in forums %}
	{% if item.cat == 1 %}
		{% if loop.first %}
			<div class="c-forum-cat t-forum-cat" role="list">
				<div class="o-bar c-forum-cat-header t-forum-cat-header" role="list" data-toggle-parent="collapse">
					<div class="o-bar-left c-forum-cat-header-left t-forum-cat-header-left">
						<span class="o-bar-item c-forum-cat-header-item t-forum-cat-header-item">
							<h2 class="o-bar-title c-forum-cat-header-title t-forum-cat-header-title" role="heading" aria-level="2">
								<a class="c-forum-cat-link t-forum-cat-link" href="{{ item.url }}">{{ item.name }}</a>
							</h2>
						</span>
					</div>
					<div class="o-bar-right c-forum-cat-header-right t-forum-cat-header-right">
						<a class="o-bar-item o-action c-forum-cat-header-action t-forum-cat-header-action" href="#" data-tooltip="true" data-toggle="collapse" data-toggle-tooltip="Expand" title="Collapse">
							{{ 'mdi:chevron-up'|icon('iconify', 'o-icon o-action-icon c-forum-cat-header-action-iocn t-forum-cat-header-action-icon')|safe }}
						</a>
					</div>
				</div>
				<div class="c-forum-deck t-forum-deck" data-container="collapse">
		{% else %}
				</div>
			</div>
			<div class="c-forum-cat t-forum-cat" role="list">
				<div class="o-bar c-forum-cat-header t-forum-cat-header" role="list" data-toggle-parent="collapse">
					<div class="o-bar-left c-forum-cat-header-left t-forum-cat-header-left">
						<span class="o-bar-item c-forum-cat-header-item t-forum-cat-header-item">
							<h2 class="o-bar-title c-forum-cat-header-title t-forum-cat-header-title" role="heading" aria-level="2">
								<a class="c-forum-cat-link t-forum-cat-link" href="{{ item.url }}">{{ item.name }}</a>
							</h2>
						</span>
					</div>
					<div class="o-bar-right c-forum-cat-header-right t-forum-cat-header-right">
						<a class="o-bar-item o-action c-forum-cat-header-action t-forum-cat-header-action" href="#" data-tooltip="true" data-toggle="collapse" title="Collapse">
							{{ 'mdi:chevron-up'|icon('iconify', 'o-icon o-action-icon c-forum-cat-header-action-iocn t-forum-cat-header-action-icon')|safe }}
						</a>
					</div>
				</div>
				<div class="c-forum-deck t-forum-deck" data-container="collapse">
		{% endif %}
	{% elseif item.cat == 0 %}
					<div class="c-forum t-forum" role="listitem">
						<a class="c-forum-body t-forum-body" href="{{ item.url }}">
							<span class="c-forum-media t-forum-media">
							{% if item.status == 0 %}
								{{ item.type|icon('inline', 'o-icon c-forum-media-icon t-forum-media-icon')|safe }}
							{% else %}
								{{ item.type|icon('inline', 'o-icon c-forum-media-icon-read t-forum-media-icon-read')|safe }}
							{% endif %}
							</span>
							<span class="c-forum-info t-forum-info">
								<h4 class="c-forum-title t-forum-title" role="heading" aria-level="3">
									{% if item.icon %}
										{{ item.icon|icon('inline', 'o-icon c-forum-title-icon t-forum-title-icon')|safe }}
									{% endif %}
										{{ item.name }}
								</h4>
								{% if item.desc %}
								<p class="c-forum-text t-forum-text">
									{{ item.desc }}
								</p>
								{% endif %}
							</span>
						</a>
						<div class="o-bar c-forum-footer t-forum-footer">
							<div class="o-bar-left c-forum-footer-left">
								<span class="o-bar-item c-forum-footer-item">
									<span class="o-bar-info c-forum-footer-info">
										{{ 'mdi:file-outline'|icon('iconify', 'o-icon o-bar-info-icon c-forum-footer-info-icon')|safe }}
										<span class="o-bar-item-text c-forum-footer-text">{{ item.topics }}</span>
									</span>
								</span>
								<span class="o-bar-item c-forum-footer-item">
									<span class="o-bar-info c-forum-footer-info">
										{{ 'mdi:comment-text-outline'|icon('iconify', 'o-icon o-bar-info-icon c-forum-footer-info-icon')|safe }}
										<span class="o-bar-item-text c-forum-footer-text">{{ item.posts }}</span>
									</span>
								</span>
							</div>
							{% if item.type !== 'link' %}
							<div class="o-bar-right c-forum-footer-right">
								{% if item.last_subject %}
								<a class="o-bar-item o-action c-forum-footer-action" href="" {% if item.last_color %} style="color: {{ item.last_color }}" {% endif %}data-tooltip="true" title="{{ item.last_subject }}, by {{ item.last_author }}, <br>{{ item.last_time|moment("YYYYMMDD", true) }}">
									{{ 'mdi:page-last'|icon('iconify', 'o-icon o-action-icon c-forum-footer-action-icon')|safe }}
								</a>
								{% endif %}
								{% if item.subs %}
								<a class="o-bar-item o-action c-forum-footer-action" href="" data-toggle="menu" data-tooltip="true" title="{{ lang.subforums }}">
									{{ 'mdi:more-vert'|icon('iconify', 'o-icon o-action-icon c-forum-footer-action-icon')|safe }}
								</a>
								<div class="c-menu-container t-menu-container" data-container="menu">
									<ul class="c-menu t-menu">
										{% for sub in item.subs %}
										<li class="c-menu-item t-menu-item">
											<a class="c-menu-link t-menu-item" href="{{ sub.url }}">
												{{ 'circle-small-outline'|icon('inline', 'o-icon c-menu-link-icon t-menu-forum-icon')|safe }}
												<span class="c-menu-text t-forum-text">{{ sub.name }}</span>
											</a>
										</li>
										{% endfor %}
									</ul>
								</div>
								{% endif %}
							</div>
							{% endif %}
						</div>
					</div>
	{% endif %}
	{% if loop.last %}
			</div>
		</div>
	{% endif %}
{% endfor %}
